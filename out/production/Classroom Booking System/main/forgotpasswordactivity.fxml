<Pane prefHeight="160.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.ForgotPasswordActivity">
    <children>
        <TextField fx:id="fEmail" layoutX="37.0" layoutY="45.0" prefHeight="25.0" prefWidth="162.0" promptText="Email" />
        <Button fx:id="getotp" layoutX="212.0" layoutY="80.0" mnemonicParsing="false" onAction="#getOTP" text="Get OTP" />
        <Button fx:id="resetbtn" disable="true" layoutX="101.0" layoutY="115.0" mnemonicParsing="false" onAction="#reset" text="Reset password" />
        <TextField fx:id="fOTP" disable="true" layoutX="37.0" layoutY="115.0" maxWidth="50.0" prefWidth="50.0" promptText="OTP" />
        <PasswordField fx:id="fPassword" layoutX="37.0" layoutY="80.0" prefHeight="25.0" prefWidth="162.0" promptText="New Password" />
        <Button layoutX="212.0" layoutY="115.0" mnemonicParsing="false" onAction="#goHome" prefHeight="25.0" prefWidth="60.0" text="Home" />
        <ImageView fitHeight="46.0" fitWidth="47.0" layoutX="263.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../resources/logo.jpg" />
            </image></ImageView>
      <Label layoutX="37.0" layoutY="21.0" text="Reset Password" />
    </children>
