                </graphic>
            </Tab>
            <Tab>
                <graphic>
                    <StackPane rotate="90.0">
                        <Label minHeight="50.0" minWidth="90.0" prefHeight="60.0" prefWidth="79.0" rotate="90.0" text="My Profile" wrapText="true" />
                    </StackPane>
                </graphic>
            </Tab>
