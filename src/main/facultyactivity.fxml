<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="460.0" prefWidth="670.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.FacultyActivity">
    <ImageView fitHeight="467.0" fitWidth="677.0" pickOnBounds="true">
        <image>
            <Image url="@../resources/bg.png" />
        </image>
    </ImageView>
    <TabPane fx:id="tabPane" layoutY="39.0" prefHeight="430.0" prefWidth="670.0" rotateGraphic="true" side="LEFT" stylesheets="@../resources/application.css" tabClosingPolicy="UNAVAILABLE" tabMaxHeight="100.0" tabMaxWidth="60.0" tabMinHeight="100.0" tabMinWidth="60.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
        <tabs>
            <Tab fx:id="tab1">
                <graphic>
                    <StackPane minHeight="100.0" minWidth="60.0" rotate="90.0">
                        <Label minHeight="50.0" minWidth="90.0" prefHeight="60.0" prefWidth="79.0" rotate="90.0" text="Add Courses" textFill="WHITE" />
                    </StackPane>
                </graphic>
                <content>
                    <Pane maxHeight="1.7976931348623157E308" maxWidth="571.0" minHeight="0.0" minWidth="0.0" prefHeight="430.0" prefWidth="570.0">
                        <children>
                            <RadioButton fx:id="myCourses" layoutX="12.0" layoutY="14.0" mnemonicParsing="false" onAction="#myCoursesListener" text="My Courses" textFill="WHITE">
                                <toggleGroup>
                                    <ToggleGroup fx:id="course" />
                                </toggleGroup>
                            </RadioButton>
                            <RadioButton fx:id="allCourses" layoutX="109.0" layoutY="14.0" mnemonicParsing="false" onAction="#setAllCoursesListener" text="All Courses" textFill="WHITE" toggleGroup="$course" />
                            <TableView fx:id="coursesTable" layoutX="12.0" layoutY="38.0" prefHeight="371.0" prefWidth="540.0">
                                <columns>
                                    <TableColumn fx:id="name" prefWidth="200.0" text="Name" />
                                    <TableColumn fx:id="code" prefWidth="75.0" text="Code" />
                                    <TableColumn fx:id="credits" prefWidth="75.0" text="Credits" />
                                    <TableColumn fx:id="instructor" prefWidth="175.0" text="Instructor" />
                                </columns>
                            </TableView>
                        </children>
                    </Pane>
                </content>
            </Tab>
            <Tab>
                <graphic>
                    <StackPane rotate="90.0">
                        <Label minHeight="50.0" minWidth="90.0" prefHeight="60.0" prefWidth="79.0" rotate="90.0" text="Book a Room" textFill="WHITE" wrapText="true" />
                    </StackPane>
                </graphic>
                <content>
                    <Pane minHeight="0.0" minWidth="0.0" prefHeight="360.0" prefWidth="570.0">
                        <children>
                            <Button fx:id="btnbook" layoutX="398.0" layoutY="379.0" mnemonicParsing="false" onAction="#bookRoom" prefHeight="25.0" prefWidth="157.0" text="Book" wrapText="true" />
                            <ListView fx:id="roomList" layoutX="14.0" layoutY="33.0" prefHeight="371.0" prefWidth="372.0">
                                <placeholder>
                                    <Label text="Nothing found" textFill="white">
                                        <font>
                                            <Font size="18.0" />
                                        </font>
                                    </Label>
                                </placeholder>
                            </ListView>
                            <ComboBox fx:id="day" layoutX="398.0" layoutY="33.0" prefHeight="25.0" prefWidth="157.0" promptText="Date" />
                            <ComboBox fx:id="sTimeInterval" layoutX="398.0" layoutY="113.0" prefHeight="25.0" prefWidth="157.0" promptText="Start Time" />
                            <ComboBox fx:id="eTimeInterval" layoutX="398.0" layoutY="153.0" prefHeight="25.0" prefWidth="157.0" promptText="End Time" />
                            <TextArea fx:id="reason" layoutX="398.0" layoutY="193.0" prefHeight="169.0" prefWidth="157.0" promptText="Reason" />
                            <ComboBox fx:id="room" layoutX="398.0" layoutY="73.0" prefHeight="25.0" prefWidth="157.0" promptText="Room" />
                            <RadioButton fx:id="roomsDetail" layoutX="14.0" layoutY="6.0" mnemonicParsing="false" onAction="#viewAllRooms" text="Rooms Detail" textFill="WHITE">
                                <toggleGroup>
                                    <ToggleGroup fx:id="rr" />
                                </toggleGroup>
                            </RadioButton>
                            <RadioButton fx:id="roomsBooked" layoutX="135.0" layoutY="6.0" mnemonicParsing="false" onAction="#bookedRoom" text="Rooms Booked by you" textFill="WHITE" toggleGroup="$rr" />

                        </children>
                    </Pane>
                </content>
            </Tab>
            <Tab>
                <graphic>
                    <StackPane rotate="90.0">
                        <Label minHeight="50.0" minWidth="90.0" prefHeight="60.0" prefWidth="79.0" rotate="90.0" text="My TimeTable" textFill="WHITE" wrapText="true" />
                    </StackPane>
                </graphic>
                <content>
                    <Pane fx:id="timetablePane" minHeight="0.0" minWidth="0.0" prefHeight="360.0" prefWidth="500.0">
                        <children>
                            <TableView fx:id="tableView" layoutX="14.0" layoutY="14.0" prefHeight="392.0" prefWidth="540.0" />
                        </children>
                    </Pane>
                </content>
            </Tab>
        </tabs>
    </TabPane>
    <Button fx:id="logout" layoutX="561.0" mnemonicParsing="false" onAction="#gotoHome" prefHeight="32.0" prefWidth="116.0" text="Log out" />
    <Label fx:id="tname" layoutX="8.0" prefHeight="40.0" prefWidth="454.0" text="Welcome" textFill="WHITE">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <ImageView fitHeight="25.0" fitWidth="28.0" layoutX="527.0" layoutY="4.0" onMouseClicked="#refresh" pickOnBounds="true">
        <image>
            <Image url="@../resources/refresh.png" />
        </image>
    </ImageView>
</Pane>
